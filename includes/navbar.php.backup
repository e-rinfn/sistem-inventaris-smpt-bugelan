$stok_rendah = [];
if (isset($_SESSION['id_pengguna'])) {
    $threshold_stok = 5; // Batas stok rendah
    $query = "SELECT b.nama_barang, b.stok, b.satuan 
              FROM barang b 
              WHERE b.stok <= ? 
              ORDER BY b.stok ASC 
              LIMIT 5";
    $stmt = $pdo->prepare($query);
    $stmt->execute([$threshold_stok]);
    $stok_rendah = $stmt->fetchAll(PDO::FETCH_ASSOC);

    $jumlah_notifikasi = count($stok_rendah);
}
